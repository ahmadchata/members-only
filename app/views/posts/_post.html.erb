  <div class="container">
  <h3>Posts</h3>
  <% @posts.each do |post| %>
  <div class="card col-12 mt-3">
    <div class="card-header">
      <strong><%= post.title %></strong>
    </div>
    <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= post.body %></p>
      <footer class="blockquote-footer">
        <%= show_name(post) %>
      </footer>
    </blockquote>
  </div>
  <% end %>
  </div>
