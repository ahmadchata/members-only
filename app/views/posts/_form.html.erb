<%= form_for(@post) do |f| %>
    <div class="form-group">
      <%= f.text_field :title, placeholder: "your title here...", class: "form-control mt-3" %>
    </div>
    <div class="form-group">
      <%= f.text_area :body, placeholder: "your post...", class: "form-control", rows: "3"%>
    </div>
    <div class="actions">
    <%= f.submit "Submit", class: "btn btn-success" %>
    </div>
    <% end %>
   <%= link_to 'Back', :back %>

